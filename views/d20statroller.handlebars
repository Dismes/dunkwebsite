                <button type="button" class="btn btn-primary btn-block" onclick="clickDice(2)">d2</button>
            </div>
        </div>


    </div>

    <div class='col-sm-8'>
        <div class="form-group">
            <label for="comment">Dice Rolls</label>
            <textarea class="form-control" rows="20" id="comment">{{roll}}</textarea>
        </div>

    </div>

</div>

